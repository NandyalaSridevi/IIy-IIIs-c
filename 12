#include <stdio.h>

void printPattern(int N) {
    int size = 2 * N - 1;  
    
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            
            int value = N - (i < j ? (i < size - 1 - j ? i : size - 1 - j) : (j < size - 1 - i ? j : size - 1 - i));
            printf("%d ", value);
        }
        printf("\n");
    }
}

int main() {
    int N;
    scanf("%d", &N);  
    printPattern(N);   
    return 0;
}
